    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "fs-extra": "^9.0.1",
    "helmet": "^3.22.0",
    "highlight.js": "^10.7.2",
    "lodash": "^4.17.21",
    "marked": "^2.0.3",
